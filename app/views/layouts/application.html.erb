<!DOCTYPE html>
<html>
  <head>
    <title>Inn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">inn.</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="#">Create a Listing </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"> Bookings </a>
      </li>
          <% if user_signed_in? %>
        <li>  <span class="nav-link">Hello <%= current_user.first_name %></span> </li>
        <li>  <%= link_to "Sign Out", new_session_path, method: :delete, data: {confirm: "Are you sure you want to sign out?"}, class: "nav-link" %> </li>
         <li> <%= link_to "My Profile", user_path(current_user), class: "nav-link" %> </li>
        <% else %>
          <li> <%= link_to "Sign In", new_session_path, class: "nav-link" %> </li>
          <li> <%= link_to "Sign Up", new_user_path, class: "nav-link" %> </li>
        <% end %>
    </ul>
  </div>
</nav>
    <%= yield %>
  </body>
</html>


