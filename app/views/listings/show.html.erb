

<div>

<div class="card mb-3">
  <% if @listing.image_location %>
  <img class="card-img-top" src="<%= asset_path(@listing.image_location)%>" alt="Card image cap">
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%=@listing.address %></h5>
    <p class="card-text"> <p>$<%= @listing.price %> per night. </p>
<p> <%= @listing.amenities %> </p>
<p> <%= @listing.description %> </p>
<h3>Start date</h3>
<p><%=date_field(:booking, :start_date)%></p>
<h3>End date</h3>
<p><%=date_field(:booking, :end_date)%></p>
    
      <%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $296.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Ready for Checkout!"
          data-amount="29600"
          data-locale="auto"></script>
<% end %>
  </div>
</div>
  
</div>